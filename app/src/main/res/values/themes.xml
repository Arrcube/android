<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Capstone" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/green</item>
    </style>

    <style name="Theme.Capstone" parent="Base.Theme.Capstone" />

    <style name="LightFont">
        <item name="android:fontFamily">@font/manrope_light</item>
    </style>

    <style name="RegularFont">
        <item name="android:fontFamily">@font/manrope</item>
    </style>

    <style name="SemiBoldFont">
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

    <style name="ExtraBoldFont">
        <item name="android:fontFamily">@font/manrope_extrabold</item>
    </style>

    <style name="ToolBarFont" parent="Widget.Material3.Toolbar">
        <item name="fontFamily">@font/manrope_extrabold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/corner_border</item>
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">18dp</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

</resources>